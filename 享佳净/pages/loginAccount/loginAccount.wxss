page {
  height: 100%;
  width: 100%;
}

/*登录图片*/
.login-icon {
  width: 100%;
  height: 50%;
  display: flex;
}
.login-img {
  width: 100%;
  height: 100%;
}

/*表单内容*/
.login-from {
  height: 50%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.inputView {
  width: 90%; 
  height: 15%;
  border: 1rpx solid #d5d5d5;
  border-radius: 5px;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  background-color: white
}

/*输入框*/
.nameImage, .keyImage {
  width: 20%;
  height: 80%;
  margin-left: 10rpx;
}
.loginLab {
  width: 20%;
  height: 80%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/*忘记密码 注册*/
.forgetregisterView{
  width: 90%;
  height: 15%;
  font-size: 16px;
  color: #0096fb;
  display: flex;
  justify-content:flex-end;
  align-items: center;
}
.forgetPsd,.register{
  margin-left: 30rpx;
}
.register{
  border-left: 1px solid #0096fb;
  padding-left: 30rpx;
}
/*按钮*/
.loginBtn {
  width: 90%;
  height: 15%;
  color: white;
  background-color: #068de7;
  margin-top: 30rpx;
}
