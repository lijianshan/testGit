/* pages/devicemanage/info/info.wxss */
page{
  width: 100%;
  height: 100%;
}

.nameView{
  width: 100%;
  height: 30%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.nameView text{
  font-size: 24px;
}

.nameView view{
  width: 150rpx;
  height: 50rpx;
  font-size: 16px;
  margin: 10rpx;
  border-radius: 25rpx;
  border: 2rpx solid #545454;
  display: flex;
  justify-content: center;
  align-items: center;
}
.line{

  width: 90%;
  height: 2rpx;
  background-color: #545454;
}

.cell{
  width: 100%;
  height: 12%;
  padding-left: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.value{
  margin-top: 6rpx;
  font-size: 13px;
}
