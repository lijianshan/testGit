page {
  height: 100%;
}

.containerAll {
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: baseline;
  background: rebeccapurple;
}

.toplevel {
  width: 100%;
  height: 5%;
  background-color: #325087;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.devicename {
  height: 100%;
  color: white;
  font-size: 18px;
}

.deviceset {
  width: 8%;
  height: 80%;
  margin-right: 20rpx;
}

.centerlevel {
  width: 100%;
  height: 35%;
  background-color: #152642;
  display: flex;
  flex-direction: column;
}

.roomoutairparameter {
  color: white;
  font-size: 10px;
  margin-top: 10rpx;
  margin-left: 25rpx;
}

.pm25show {
  color: white;
  margin: 10rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.outdoorAirButton {
  font-size: 10px;
  position: absolute;
  top: 0px;
  left: 0px;
  color: white;
  background-color: #1a3e79;
}

.pm25showtext {
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  font-size: 15px;
}

.servicelifelevel {
  width: 100%;
  height: 10%;
  color: white;
  font-size: 18px;
  background-color: #152642;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.servicecondition {
  display: flex;
  justify-content: flex-start;
}

.serviceconditiontkey {
  width: 25%;
  margin-left: 15rpx;
  font-size: 16px;
}

.serviceconditionvalue {
  width: 65%;
  font-size: 16px;
}

.romstatelevel {
  width: 100%;
  height: 10%;
  background-color: #152642;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: flex-star;
}

.roomstate {
  width: 24%;
  height: 50%;
  background-color: #152642;
  border-top: 1px solid #d3d3d3;
  color: white;
  font-size: 16px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.borderright {
  border-right: 1px solid #d3d3d3;
}

.roomstateimage {
  width: 30%;
  height: 90%;
}

.devicecontrollevelA {
  width: 100%;
  height: 25%;
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
}

.devicecontrolA1 {
  width: 45%;
  height: 60%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.dcA1_modeswitchimages {
  width: 80%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
}

.devicecontrol_text {
  width: 20%;
  height: 60%;
  font-size: 16px;
  border-right: 1px solid #5f5f5f;
  display: flex;
  justify-content: center;
  align-items: center;
}

.dcA1_modeswitchimage {
  width: 35%;
  height: 50%;
}

.devicecontrolA2 {
  width: 45%;
  height: 40%;
  display: flex;
  align-items: center;
}

.dcA2_loopimages {
  width: 80%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
}

.dcA2_loopimage {
  width: 40%;
  height: 80%;
}

.offtime {
  width: 50%;
  height: 80%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.offtimechange {
  width: 100%;
  height: 100%;
}

.devicecontrolB {
  width: 100%;
  height: 15%;
  border-top: 1px solid #d3d3d3;
  background-color: #fff;
  display: flex;
}

.powerswitch {
  width: 30%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.dcB_powerimage {
  width: 75%;
  height: 90%;
}

.fanspeed {
  width: 70%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.slider {
  width: 90%;
}


.modal-mask {
  width: 100%;
  height: 40%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #000;
  opacity: 0.1;
  overflow: hidden;
  z-index: 9000;
}