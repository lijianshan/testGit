page {
  width: 100%;
  height: 100%;
}

.line{
    height: 2%;
}
.cell {
  width: 100%;
  height: 9.5%;
  font-size: 16px;
  border: 2rpx solid #f5f5f5;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.icon {
  width: 10%;
  height: 60%;
  margin-left: 10rpx;
}

.title {
  width: 75%;
  padding-left: 10rpx;
}
.question{
  width: 10%;
  height: 50%;
}
.deviceView{
  width: 100%;
  height: 80%;
  font-size: 16px;
  color: white;
}
.deviceCellView{
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
  width: 100%;
  overflow: hidden;
}
.deviceCell{
  width: 100%;
  height: 280rpx;
  margin-top: 10rpx;
  background-color:#152642;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  justify-content: center;
  margin-left: -90px;
  transform: translateX(90px);
  transition:  0.4s;
}
.manage {
  width: 90px;
  margin-top: 10rpx;
  background-color: #068de7;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transform: translateX(90px);
  transition:  0.4s;
}
.touch-move-active .deviceCell, .touch-move-active .manage {
  transform: translateX(0);
   transition: 0.4s;
}


.deviceImage {
  width: 20%;
  height: 140rpx;
  border-radius: 70rpx;
  margin: 20rpx;
  background-color: white
}
.deviceInfo{
  width: 80%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
}
.state{
  width: 15%;
  height: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.stateImage {
  width: 60%;
  height: 60%;
}
.user{
  width: 15%;
  height: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.userImage{
  width: 60%;
  height: 60%;
}
.name{
  width: 70%;
  height: 50%;
  display: flex;
  align-items: center;
}
.nameTitle{
  margin-left: 30rpx;
}
.other{
  width: 100%;
  height: 50%;
  display: flex;
  align-content: center;
 
}
.othercell{
  width: 30%;
  height: 100%;
  display: flex;
  align-items: center;
}
.otherImage{
  width: 30%;
  height: 60%;
  margin-right: 20rpx;
}
